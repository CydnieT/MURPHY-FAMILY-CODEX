<script>
/* =========================
   FILES (matches your /docs exactly)
   ========================= */
const MANIFEST = [
  // Estate
  { name: "Revocable Living Trust", category: "Estate", path: "docs/Revocable_Trust.pdf" },
  { name: "Ricky · Last Will and Testament", category: "Estate", path: "docs/MURPHY_RICKY_Last_Will_and_Testament.pdf" },
  { name: "Cydnie · Last Will and Testament", category: "Estate", path: "docs/MURPHY_CYDNIE_Last_Will_and_Testament.pdf" },
  { name: "Ricky · Durable Financial Power of Attorney", category: "Estate", path: "docs/MURPHY_RICKY_Durable_Financial_Power_of_Attorney.pdf" },
  { name: "Cydnie · Durable Financial Power of Attorney", category: "Estate", path: "docs/MURPHY_CYDNIE_Durable_Financial_Power_of_Attorney.pdf" },

  // Medical
  { name: "Ricky · Advance Healthcare Directive", category: "Medical", path: "docs/MURPHY_RICKY_Advance_Healthcare_Directive.pdf" },
  { name: "Cydnie · Advance Healthcare Directive", category: "Medical", path: "docs/MURPHY_CYDNIE_Advance_Healthcare_Directive.pdf" },
  { name: "Revocable Living Will", category: "Medical", path: "docs/Revocable Living Will.pdf" },

  // Identity
  { name: "Ricky · DS-11 Passport Packet", category: "Identity", path: "docs/DS11_Complete (1)RickyMurphy.pdf" },
  { name: "Cydnie · DS-11 Passport Packet", category: "Identity", path: "docs/DS11_CompleteCydnieMurphy.pdf" },

  // Finance
  { name: "CPA · Banking Summary", category: "Finance", path: "docs/Murphy_CPA_Banking_Summary.pdf" },
];

/* =========================
   HELPERS
   ========================= */
const qEl = document.getElementById("q");
const catEl = document.getElementById("cat");
const sectionsEl = document.getElementById("sections");
const tbodyEl = document.getElementById("tbody");
const countEl = document.getElementById("count");

const backdrop = document.getElementById("backdrop");
const frame = document.getElementById("frame");
const mtitle = document.getElementById("mtitle");
const mdownload = document.getElementById("mdownload");
const mclose = document.getElementById("mclose");

// Encode each path segment (keeps slashes, fixes spaces + parentheses)
function hrefFor(path){
  return path.split("/").map(encodeURIComponent).join("/");
}

function uniq(arr){ return [...new Set(arr)].sort((a,b)=>a.localeCompare(b)); }
function esc(s){
  return String(s).replace(/[&<>"']/g, m => (
    { "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#39;" }[m]
  ));
}

function matches(it, q, cat){
  const query = (q || "").trim().toLowerCase();
  const catOK = (cat === "All" || it.category === cat);
  if (!catOK) return false;
  if (!query) return true;
  return (
    it.name.toLowerCase().includes(query) ||
    it.category.toLowerCase().includes(query) ||
    it.path.toLowerCase().includes(query)
  );
}

/* =========================
   MODAL
   ========================= */
function openDoc(it){
  const url = hrefFor(it.path);
  mtitle.textContent = it.name;
  mdownload.href = url;
  frame.src = url;
  backdrop.style.display = "grid";
}
function closeDoc(){
  backdrop.style.display = "none";
  frame.src = "about:blank";
}
mclose.addEventListener("click", closeDoc);
backdrop.addEventListener("click", (e)=>{ if (e.target === backdrop) closeDoc(); });
document.addEventListener("keydown", (e)=>{ if (e.key === "Escape") closeDoc(); });

/* =========================
   RENDER
   ========================= */
function buildCategories(){
  const cats = uniq(["All", ...MANIFEST.map(x=>x.category)]);
  catEl.innerHTML = cats.map(c => `<option value="${esc(c)}">${esc(c)}</option>`).join("");
}

function render(){
  const q = qEl.value || "";
  const cat = catEl.value || "All";
  const items = MANIFEST.filter(it => matches(it, q, cat));

  countEl.textContent = `${items.length} document${items.length===1?"":"s"}`;

  // Grouped sections (binder feel)
  const byCat = {};
  items.forEach(it => { (byCat[it.category] ||= []).push(it); });

  sectionsEl.innerHTML = "";
  Object.keys(byCat).sort().forEach(category => {
    const block = document.createElement("div");
    block.className = "sectionBlock";
    block.innerHTML = `
      <div class="secTitle">${esc(category)}</div>
      <div class="list">
        ${byCat[category].map(it => {
          const url = hrefFor(it.path);
          return `
            <div class="item">
              <div class="left">
                <div class="name">${esc(it.name)}</div>
                <div class="path">${esc(it.path)}</div>
              </div>
              <div class="actions">
                <button class="btn primary" type="button" data-open="${esc(it.name)}">Open</button>
                <a class="btn" href="${url}" download>Download</a>
              </div>
            </div>
          `;
        }).join("")}
      </div>
    `;
    sectionsEl.appendChild(block);
  });

  // Wire Open buttons
  sectionsEl.querySelectorAll("button[data-open]").forEach(btn => {
    const name = btn.getAttribute("data-open");
    btn.addEventListener("click", () => {
      const it = MANIFEST.find(x => x.name === name);
      if (it) openDoc(it);
    });
  });

  // Table
  tbodyEl.innerHTML = items.map(it => {
    const url = hrefFor(it.path);
    return `
      <tr>
        <td><strong>${esc(it.name)}</strong><div class="muted" style="font-family:var(--mono); font-size:11px">${esc(it.path)}</div></td>
        <td>${esc(it.category)}</td>
        <td>
          <button class="btn primary" type="button" data-open="${esc(it.name)}">Open</button>
          <a class="btn" href="${url}" download>Download</a>
        </td>
      </tr>
    `;
  }).join("");

  // Wire table Open buttons
  tbodyEl.querySelectorAll("button[data-open]").forEach(btn => {
    const name = btn.getAttribute("data-open");
    btn.addEventListener("click", () => {
      const it = MANIFEST.find(x => x.name === name);
      if (it) openDoc(it);
    });
  });
}

document.addEventListener("DOMContentLoaded", () => {
  buildCategories();
  render();
  qEl.addEventListener("input", render);
  catEl.addEventListener("change", render);
});
</script>
</body>
</html>

